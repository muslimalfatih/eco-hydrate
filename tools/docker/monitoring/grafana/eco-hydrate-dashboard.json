{
  "dashboard": {
    "id": null,
    "title": "Eco-Hydrate Performance Dashboard",
    "tags": ["eco-hydrate", "nextjs", "ab-testing"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (requests/sec)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(eco_hydrate_http_request_duration_seconds_count[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time P95 (seconds)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(eco_hydrate_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "A/B Test Conversions by Variant",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(eco_hydrate_ab_test_conversions_total[1m])",
            "legendFormat": "{{variant}} - {{event_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Order Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(eco_hydrate_order_submissions_total{status=\"success\"}[5m]) / rate(eco_hydrate_order_submissions_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
